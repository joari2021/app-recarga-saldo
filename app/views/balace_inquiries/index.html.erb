<h1>Balace Inquiries</h1>

<table>
  <thead>
    <tr>
      <th>Debt</th>
      <th>Avalaible days</th>
      <th>Operadora</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balace_inquiries.each do |balace_inquiry| %>
      <tr>
        <td><%= balace_inquiry.debt %></td>
        <td><%= balace_inquiry.avalaible_days %></td>
        <td><%= balace_inquiry.operadora %></td>
        <td><%= balace_inquiry.status %></td>
        <td><%= link_to 'Show', balace_inquiry %></td>
        <td><%= link_to 'Edit', edit_balace_inquiry_path(balace_inquiry) %></td>
        <td><%= link_to 'Destroy', balace_inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

