$('#modal_body_contacts').html('<%= j render("form") %>');

if ($("#contact_operator").val() === "movistar" && $("#contact_type_payment").val() === "post-pago" || $("#contact_operator").val() === "movistar_tv" || $("#contact_operator").val() === "inter" || $("#contact_operator").val() === "simple_tv"){
    $("#div_cod_area").css({"display":"none"})
}

