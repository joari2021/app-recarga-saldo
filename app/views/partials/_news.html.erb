<% @news.each do |news| %>
    <div class="col-lg-4 col-md-6 col-xs-12 blog-item">
        <div class="blog-item-wrapper">
            <div class="blog-item-img">
                <a href="<%=news.link_news%>" target="_blank">
                <img src="<%=news.link_img_news%>" alt="<%=news.etiqueta%>" style="width:100%; height:230px;">
                </a>
                
                <div class="author-img">
                    <%= image_tag("sistema_recargas/#{news.etiqueta}.png", style:"width:100px; height:50px") %>
                </div>
            </div>
            <div class="blog-item-text">
                <h3>
                <a href="<%=news.link_news%>" target="_blank"
                    ><%=news.subtitulo%>.</a
                >
                </h3>
                <div class="author">
                    <!--<span class="name"><a href="#">Noticias al dia y la hora</a></span>-->
                    <span class="date float-right"><%= I18n.l(news.date_news, format: '%d %B, %Y') %></span>
                </div>
            </div>
        </div>
        <%if user_signed_in? && current_user.is_admin?%>
            <td><%= link_to 'Show', news %></td>
            <td><%= link_to 'Edit', edit_news_path(news) %></td>
            <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
    </div>
<%end%>