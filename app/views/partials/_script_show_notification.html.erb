<script src="/js/notify/perfect-scrollbar.jquery.min.js"></script>
<script src="/js/notify/bootstrap-notify.js"></script>
<script>
    notice_show = false
    alert_show = false
    md = {
        showNotification: function(message, color) {
            
            $.notify({
                message: message
        
            }, {
                type: color,
                timer: 15000,
                placement: {
                from: "top",
                align: "right"
                }
            });
        },
    }
    function comprobar_flash_messages(){
        <%if notice%>
            if (!notice_show){
                md.showNotification('<%=notice%>','success')
                notice_show = true
            }
        <%end%>

        <%if alert%>
            if (!alert_show){
                md.showNotification('<%=alert%>','danger')
                alert_show = true
            }
        <%end%>
    }
</script>