$("#close_modal_deposit").trigger("click");

$("#deposit_<%=@deposit.id%>").remove()

<%if @deposit.status === "confirmado"%>    
    swal({
        title: "Confirmación enviada",
        text: "El deposito ha sido confirmado con exito",
        icon: "success",
        button: "Cerrar",
    });
<%elsif @deposit.status === "anulado"%>
    swal({
        title: "Anulación completada",
        text: "El deposito ha sido anulado con exito",
        icon: "success",
        button: "Cerrar",
    });
<%end%>
deposits_count -= 1 
$("#deposits_cant").text(deposits_count)