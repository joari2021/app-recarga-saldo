<div class="col-lg-4 col-sm-6 mb-4 div_deposit" id="deposit_<%=deposit.id%>">
    <div class="card border-left-standar shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-sm font-weight-bold color-standar-medio text-uppercase mb-1">
                        <%=deposit.bank_destinity.gsub("_"," ")%>
                    </div>
                    <div class="text-sm mb-0">
                        <span class="font-weight-bold">Usuario: </span><%=deposit.user.profile.name + " " + deposit.user.profile.last_name%><br> 
                        <span class="font-weight-bold">Fecha: </span><%=deposit.date_send.strftime("%d/%m/%Y")%><br> 
                        
                        <span class="font-weight-bold">Monto: </span><%=number_with_precision(deposit.amount, :precision => 2, :delimiter => '.', :separator => ',', :scale => 2)%><br>
                       
                    </div>
                    
                    <div class="text-center mt-3">            
                        <%=link_to "Procesar", edit_deposit_path(deposit), html_options = {class: "btn_standar btn-common btn-effect bg-special text-uppercase d-inline-block show_loader_sup", remote: true}%>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>