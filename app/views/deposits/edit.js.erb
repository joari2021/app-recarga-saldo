$('#title_modal_deposit').html("Procesar Deposito");
$('#modal_body_deposits').html('<%= j render("form") %>');

$("#btn_deposit").text("Confirmar")

$("#deposit_bank_destinity").val("<%=@deposit.bank_destinity.gsub("_"," ")%>")
$("#deposit_method_payment").val("<%=@deposit.method_payment.gsub("_"," ")%>")
$("#deposit_amount").val("<%=number_with_precision(@deposit.amount, :precision => 2, :delimiter => '.', :separator => ',', :scale => 2)%>")

<%unless @deposit.errors.any?%>
    hidden_loader_sup()
    $("#modal_deposit").addClass("show")
    $("#modal_deposit_wrap").addClass("show")
<%else%>
    swal({
        title: "Error",
        text: "Ha ocurrido un error y la acci√≥n no fue procesada",
        icon: "warning",
        button: "Cerrar",
    });
<%end%>

