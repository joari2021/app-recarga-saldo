$('#title_modal_deposit').html("Nueva Compra");
 
$('#modal_body_deposits').html('<%= j render("form") %>');

show_datepicker()
toggle_list_options()

<%if @deposit.errors.any?%>
    $("#deposit_amount").val("<%=number_with_precision(@deposit.amount, :precision => 2, :delimiter => '.', :separator => ',', :scale => 2)%>")
    estilizar_errores_validacion()
<%else%>
    $("#modal_deposit").addClass("show")
    $("#modal_deposit_wrap").addClass("show")
<%end%>