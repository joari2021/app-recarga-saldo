<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Document</th>
      <th>Type document</th>
      <th>Phone</th>
      <th>State</th>
      <th>City</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.address %></td>
        <td><%= profile.document %></td>
        <td><%= profile.type_document %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.state %></td>
        <td><%= profile.city %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.age %></td>
        <td><%= profile.date_of_birth %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

