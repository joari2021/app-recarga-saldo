<p id="notice"><%= notice %></p>

<h1>Recharges</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Operator</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recharges.each do |recharge| %>
      <tr>
        <td><%= recharge.amount %></td>
        <td><%= recharge.operator %></td>
        <td><%= recharge.user_id %></td>
        <td><%= link_to 'Show', recharge %></td>
        <td><%= link_to 'Edit', edit_recharge_path(recharge) %></td>
        <td><%= link_to 'Destroy', recharge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recharge', new_recharge_path %>
